##-*- Mode: sh -*-
##---------------------------------------------------------------------------##
## .bashrc_tt - my bash configuration file upon bash login
##---------------------------------------------------------------------------##

if test -n "$verbose"; then
   echo "In draco/environment/bashrc/.bashrc_tt"
fi

##---------------------------------------------------------------------------##
## ENVIRONMENTS
##---------------------------------------------------------------------------##

# unlimit stack and core dump sizes.
ulimit -s unlimited

# Where is the vendor directory
if test "${VENDOR_DIR}x" == "x"; then
   if test -d /usr/projects/draco/vendors; then
      VENDOR_DIR=/usr/projects/draco/vendors
   fi
fi

# If LESS is set, is should include '-R' so that git diff's color
# displays correctly.
if test -n "${LESS}"; then
  if test `echo $LESS | grep R | wc -l` = 0; then
    export LESS="${LESS} -R"
  fi
fi

#
# MODULES
#

target="`uname -n | sed -e s/[.].*//`"
arch=`uname -m`

# Use modules found in the draco directory
module load user_contrib friendly-testing
#export ucmf=$HOME/modulefiles
#module use --append ~/modulefiles/trinitite

export dracomodules="metis parmetis/4.0.3 trilinos/12.6.1 superlu-dist/4.3 \
gsl/2.1 cmake/3.5.2 numdiff ndi random123 eospac/6.2.4 \
subversion git"

function dracoenv ()
{
  #module unload PrgEnv-intel PrgEnv-cray PrgEnv-gnu
  #module load PrgEnv-intel
  module swap intel intel/15.0.5
  for m in $dracomodules; do
    module load $m
  done
  module unload xt-libsci
  export CXX=CC
  export CC=cc
  export FC=ftn
  export CRAYPE_LINK_TYPE=dynamic
}

function rmdracoenv ()
{
  # unload in reverse order.
  mods=( ${dracomodules} )
  for ((i=${#mods[@]}-1; i>=0; i--)); do
    loaded=`echo $LOADEDMODULES | grep ${mods[$i]} | wc -l`
    if test $loaded = 1; then
      module unload ${mods[$i]}
    fi
  done
  module unload intel
  # module unload gcc
  # module unload PrgEnv-intel
  # module load PrgEnv-pgi
}

export OMP_NUM_THREADS=16

# Do not escape $ for bash completion
shopt -s direxpand

##---------------------------------------------------------------------------##
## end of .bashrc_tt
##---------------------------------------------------------------------------##
